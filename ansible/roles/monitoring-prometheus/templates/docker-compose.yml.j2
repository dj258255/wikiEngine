# AMD #2 Monitoring Server ({{ monitoring_prometheus_host }})
# Prometheus + Node Exporter
#
# 사용법: docker compose up -d

services:
  prometheus:
    image: {{ prometheus_image }}
    container_name: wiki-prometheus-prod
    restart: always
    ports:
      - "9090:9090"
    volumes:
      - ./prometheus/prometheus.yml:/etc/prometheus/prometheus.yml:Z
      - prometheus_data:/prometheus
    command:
      - "--config.file=/etc/prometheus/prometheus.yml"
      - "--storage.tsdb.retention.time={{ prometheus_retention_time }}"
      - "--storage.tsdb.retention.size={{ prometheus_retention_size }}"
    deploy:
      resources:
        limits:
          memory: {{ prometheus_memory_limit }}
    networks:
      - wiki-net

  node-exporter:
    image: {{ node_exporter_image }}
    container_name: wiki-node-exporter-prod
    restart: always
    pid: host
    command:
      - "--path.rootfs=/host"
    volumes:
      - /:/host:ro,rslave
    ports:
      - "9100:9100"
    deploy:
      resources:
        limits:
          memory: {{ node_exporter_memory_limit }}
    networks:
      - wiki-net

volumes:
  prometheus_data:

networks:
  wiki-net:
    driver: bridge
