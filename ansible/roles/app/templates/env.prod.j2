# 운영 환경 변수 (Ansible에 의해 생성됨)
# {{ ansible_date_time.iso8601 }}

# Database
DB_HOST=mysql
DB_PORT=3306
DB_NAME=wikidb
DB_USERNAME=wiki_prod
DB_PASSWORD={{ db_password }}
DB_POOL_SIZE=20

# MySQL
MYSQL_ROOT_PASSWORD={{ db_root_password }}
MYSQL_MEMORY_LIMIT=8G

# Server
SERVER_PORT=8080

# JWT
JWT_SECRET={{ jwt_secret }}
JWT_EXPIRATION=1800000

# JPA
JPA_DDL_AUTO=update
JPA_SHOW_SQL=false
HIBERNATE_BATCH_SIZE=1000

# Logging
LOG_LEVEL=INFO
