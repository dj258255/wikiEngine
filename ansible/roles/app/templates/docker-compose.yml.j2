# ARM App Server ({{ app_server_host }})
# Nginx + App + MySQL + Promtail + cAdvisor + Node Exporter + MySQL Exporter
#
# 사용법: docker compose --env-file .env.prod up -d

services:
  nginx:
    image: {{ nginx_image }}
    container_name: wiki-nginx-prod
    restart: always
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/conf.d/default.conf:ro,Z
      - ./certbot/www:/var/www/certbot:ro
      - ./certbot/certs:/etc/letsencrypt:ro
    deploy:
      resources:
        limits:
          memory: {{ app_nginx_memory_limit }}
    depends_on:
      - app
    networks:
      - wiki-net

  mysql:
    image: {{ mysql_image }}
    container_name: wiki-mysql-prod
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: ${MYSQL_ROOT_PASSWORD}
      MYSQL_DATABASE: ${DB_NAME}
      MYSQL_USER: ${DB_USERNAME}
      MYSQL_PASSWORD: ${DB_PASSWORD}
    # MySQL 포트는 localhost에서만 접근 가능 (SSH 터널용)
    ports:
      - "127.0.0.1:3306:3306"
    volumes:
      - mysql_data:/var/lib/mysql
      - mysql_logs:/var/log/mysql
    deploy:
      resources:
        limits:
          memory: {{ mysql_memory_limit }}
    command: >
      --character-set-server=utf8mb4
      --collation-server=utf8mb4_unicode_ci
      --slow-query-log=ON
      --slow-query-log-file=/var/log/mysql/slow.log
      --long-query-time=${MYSQL_SLOW_QUERY_TIME}
      --log-queries-not-using-indexes=ON
      --performance-schema=ON
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost"]
      interval: 10s
      timeout: 5s
      retries: 5
    networks:
      - wiki-net

  app:
    image: ${APP_IMAGE}
    container_name: wiki-app-prod
    restart: always
    environment:
      SPRING_PROFILES_ACTIVE: ${ENVIRONMENT}
      DB_HOST: mysql
      DB_PORT: 3306
      DB_NAME: ${DB_NAME}
      DB_USERNAME: ${DB_USERNAME}
      DB_PASSWORD: ${DB_PASSWORD}
      DB_POOL_SIZE: ${DB_POOL_SIZE}
      JWT_SECRET: ${JWT_SECRET}
      JWT_EXPIRATION: ${JWT_EXPIRATION}
      SERVER_PORT: 8080
      LOG_LEVEL: ${LOG_LEVEL}
      HIBERNATE_BATCH_SIZE: ${HIBERNATE_BATCH_SIZE}
      JPA_DDL_AUTO: ${JPA_DDL_AUTO}
      JPA_SHOW_SQL: ${JPA_SHOW_SQL}
      FLYWAY_ENABLED: ${FLYWAY_ENABLED}
      HIBERNATE_STATISTICS: ${HIBERNATE_STATISTICS}
      COOKIE_SECURE: ${COOKIE_SECURE}
      CORS_ALLOWED_ORIGINS: ${CORS_ALLOWED_ORIGINS}
      ACTUATOR_ENDPOINTS: ${ACTUATOR_ENDPOINTS}
      HEALTH_SHOW_DETAILS: ${HEALTH_SHOW_DETAILS}
    ports:
      - "8080:8080"  # Prometheus 스크래핑용 (nginx는 80/443)
    deploy:
      resources:
        limits:
          memory: {{ app_memory_limit }}
    depends_on:
      mysql:
        condition: service_healthy
    networks:
      - wiki-net

  mysql-exporter:
    image: {{ mysqld_exporter_image }}
    container_name: wiki-mysql-exporter-prod
    restart: always
    environment:
      MYSQLD_EXPORTER_PASSWORD: ${DB_PASSWORD}
    command:
      - "--mysqld.address=mysql:3306"
      - "--mysqld.username=${DB_USERNAME}"
    ports:
      - "9104:9104"
    deploy:
      resources:
        limits:
          memory: {{ mysqld_exporter_memory_limit }}
    depends_on:
      mysql:
        condition: service_healthy
    networks:
      - wiki-net

  promtail:
    image: {{ promtail_image }}
    container_name: wiki-promtail-prod
    restart: always
    volumes:
      - ./promtail/promtail.yml:/etc/promtail/config.yml:Z
      - /var/run/docker.sock:/var/run/docker.sock:ro
      - /var/lib/docker/containers:/var/lib/docker/containers:ro
    command: -config.file=/etc/promtail/config.yml
    deploy:
      resources:
        limits:
          memory: {{ promtail_memory_limit }}
    networks:
      - wiki-net

  node-exporter:
    image: {{ node_exporter_image }}
    container_name: wiki-node-exporter-prod
    restart: always
    pid: host
    command:
      - "--path.rootfs=/host"
    volumes:
      - /:/host:ro,rslave
    ports:
      - "9100:9100"
    deploy:
      resources:
        limits:
          memory: {{ node_exporter_memory_limit }}
    networks:
      - wiki-net

  cadvisor:
    image: {{ cadvisor_image }}
    container_name: wiki-cadvisor-prod
    restart: always
    ports:
      - "8081:8080"
    volumes:
      - /:/rootfs:ro
      - /var/run:/var/run:ro
      - /sys:/sys:ro
      - /var/lib/docker/:/var/lib/docker:ro
    deploy:
      resources:
        limits:
          memory: {{ cadvisor_memory_limit }}
    networks:
      - wiki-net

volumes:
  mysql_data:
  mysql_logs:

networks:
  wiki-net:
    driver: bridge
