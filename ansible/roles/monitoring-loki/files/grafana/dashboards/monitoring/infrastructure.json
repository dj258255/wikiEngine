{
  "uid": "wiki-infra",
  "title": "Wiki Engine - Infrastructure",
  "tags": ["infrastructure", "node-exporter", "cadvisor", "wiki-engine", "monitoring"],
  "timezone": "browser",
  "refresh": "15s",
  "time": { "from": "now-30m", "to": "now" },
  "templating": { "list": [] },
  "panels": [
    {
      "id": 100,
      "title": "Host (Node Exporter)",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false
    },
    {
      "id": 1,
      "title": "CPU 사용률",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "percentunit", "min": 0, "max": 1, "color": { "mode": "palette-classic" } },
        "overrides": []
      },
      "targets": [
        {
          "expr": "1 - avg(rate(node_cpu_seconds_total{mode=\"idle\"}[1m]))",
          "legendFormat": "CPU Usage",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "title": "메모리 사용량",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "bytes", "color": { "mode": "palette-classic" } },
        "overrides": []
      },
      "targets": [
        {
          "expr": "node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes",
          "legendFormat": "Used",
          "refId": "A"
        },
        {
          "expr": "node_memory_MemTotal_bytes",
          "legendFormat": "Total",
          "refId": "B"
        },
        {
          "expr": "node_memory_SwapTotal_bytes - node_memory_SwapFree_bytes",
          "legendFormat": "Swap Used",
          "refId": "C"
        }
      ]
    },
    {
      "id": 3,
      "title": "메모리 사용률 (%)",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 6, "x": 0, "y": 9 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit", "min": 0, "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.7 },
              { "color": "red", "value": 0.9 }
            ]
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)",
          "legendFormat": "Memory",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "title": "Swap 사용률 (%)",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 6, "x": 6, "y": 9 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit", "min": 0, "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.3 },
              { "color": "red", "value": 0.7 }
            ]
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "1 - (node_memory_SwapFree_bytes / node_memory_SwapTotal_bytes)",
          "legendFormat": "Swap",
          "refId": "A"
        }
      ]
    },
    {
      "id": 5,
      "title": "디스크 사용량",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 9 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "bytes", "color": { "mode": "palette-classic" } },
        "overrides": []
      },
      "targets": [
        {
          "expr": "node_filesystem_size_bytes{mountpoint=\"/\"} - node_filesystem_avail_bytes{mountpoint=\"/\"}",
          "legendFormat": "Used",
          "refId": "A"
        },
        {
          "expr": "node_filesystem_size_bytes{mountpoint=\"/\"}",
          "legendFormat": "Total",
          "refId": "B"
        }
      ]
    },
    {
      "id": 6,
      "title": "네트워크 I/O",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 17 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "Bps", "color": { "mode": "palette-classic" } },
        "overrides": []
      },
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total{device!=\"lo\"}[1m])",
          "legendFormat": "Receive - {{device}}",
          "refId": "A"
        },
        {
          "expr": "rate(node_network_transmit_bytes_total{device!=\"lo\"}[1m])",
          "legendFormat": "Transmit - {{device}}",
          "refId": "B"
        }
      ]
    },
    {
      "id": 7,
      "title": "Load Average",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 17 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "short", "color": { "mode": "palette-classic" } },
        "overrides": []
      },
      "targets": [
        {
          "expr": "node_load1",
          "legendFormat": "1m",
          "refId": "A"
        },
        {
          "expr": "node_load5",
          "legendFormat": "5m",
          "refId": "B"
        },
        {
          "expr": "node_load15",
          "legendFormat": "15m",
          "refId": "C"
        }
      ]
    },
    {
      "id": 200,
      "title": "Containers (cAdvisor)",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 25 },
      "collapsed": false
    },
    {
      "id": 8,
      "title": "컨테이너별 CPU 사용률",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 26 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "percentunit", "color": { "mode": "palette-classic" } },
        "overrides": []
      },
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{name=~\".+\", name!~\".*POD.*\"}[1m])",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 9,
      "title": "컨테이너별 메모리 사용량",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 26 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "bytes", "color": { "mode": "palette-classic" } },
        "overrides": []
      },
      "targets": [
        {
          "expr": "container_memory_usage_bytes{name=~\".+\", name!~\".*POD.*\"}",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 10,
      "title": "컨테이너별 네트워크 수신",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 34 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "Bps", "color": { "mode": "palette-classic" } },
        "overrides": []
      },
      "targets": [
        {
          "expr": "rate(container_network_receive_bytes_total{name=~\".+\", name!~\".*POD.*\"}[1m])",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 11,
      "title": "컨테이너별 디스크 I/O",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 34 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "Bps", "color": { "mode": "palette-classic" } },
        "overrides": []
      },
      "targets": [
        {
          "expr": "rate(container_fs_reads_bytes_total{name=~\".+\", name!~\".*POD.*\"}[1m])",
          "legendFormat": "Read - {{name}}",
          "refId": "A"
        },
        {
          "expr": "rate(container_fs_writes_bytes_total{name=~\".+\", name!~\".*POD.*\"}[1m])",
          "legendFormat": "Write - {{name}}",
          "refId": "B"
        }
      ]
    }
  ],
  "schemaVersion": 39
}
