# AMD #1 Monitoring Server ({{ monitoring_loki_host }})
# Nginx + Loki + Grafana + Node Exporter
#
# 사용법: docker compose --env-file .env.prod up -d

services:
  nginx:
    image: {{ nginx_image }}
    container_name: monitoring-nginx-prod
    restart: always
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/conf.d/default.conf:ro
      - ./nginx/htpasswd:/etc/nginx/htpasswd:ro
      - ./certbot/www:/var/www/certbot:ro
      - ./certbot/certs:/etc/letsencrypt:ro
    depends_on:
      - grafana
    deploy:
      resources:
        limits:
          memory: {{ nginx_memory_limit }}
    networks:
      - wiki-net

  loki:
    image: {{ loki_image }}
    container_name: wiki-loki-prod
    restart: always
    ports:
      - "3100:3100"
    volumes:
      - ./loki/loki.yml:/etc/loki/local-config.yaml:Z
      - loki_data:/loki
    command: -config.file=/etc/loki/local-config.yaml
    deploy:
      resources:
        limits:
          memory: {{ loki_memory_limit }}
    networks:
      - wiki-net

  grafana:
    image: {{ grafana_image }}
    container_name: wiki-grafana-prod
    restart: always
    environment:
      GF_SECURITY_ADMIN_USER: admin
      GF_SECURITY_ADMIN_PASSWORD: ${GRAFANA_ADMIN_PASSWORD}
      GF_AUTH_ANONYMOUS_ENABLED: "false"
      GF_AUTH_ANONYMOUS_ORG_ROLE: Viewer
      GF_AUTH_DISABLE_LOGIN_FORM: "false"
      GF_SERVER_ROOT_URL: "https://${GRAFANA_DOMAIN}"
    volumes:
      - grafana_data:/var/lib/grafana
      - ./grafana/provisioning/datasources:/etc/grafana/provisioning/datasources:Z
      - ./grafana/provisioning/dashboards:/etc/grafana/provisioning/dashboards:Z
      - ./grafana/dashboards/k6:/var/lib/grafana/dashboards/k6:Z
      - ./grafana/dashboards/monitoring:/var/lib/grafana/dashboards/monitoring:Z
    deploy:
      resources:
        limits:
          memory: {{ grafana_memory_limit }}
    depends_on:
      - loki
    networks:
      - wiki-net

  node-exporter:
    image: {{ node_exporter_image }}
    container_name: wiki-node-exporter-prod
    restart: always
    pid: host
    command:
      - "--path.rootfs=/host"
    volumes:
      - /:/host:ro,rslave
    ports:
      - "9100:9100"
    deploy:
      resources:
        limits:
          memory: {{ node_exporter_memory_limit }}
    networks:
      - wiki-net

volumes:
  loki_data:
  grafana_data:

networks:
  wiki-net:
    driver: bridge
