{
  "uid": "wiki-logs",
  "title": "Wiki Engine - Logs",
  "tags": ["logs", "loki", "wiki-engine", "monitoring"],
  "timezone": "browser",
  "refresh": "10s",
  "time": { "from": "now-1h", "to": "now" },
  "templating": { "list": [] },
  "panels": [
    {
      "id": 1,
      "title": "로그 볼륨 (컨테이너별)",
      "type": "timeseries",
      "gridPos": { "h": 6, "w": 24, "x": 0, "y": 0 },
      "datasource": { "type": "loki", "uid": "loki" },
      "fieldConfig": {
        "defaults": { "unit": "short", "color": { "mode": "palette-classic" } },
        "overrides": []
      },
      "targets": [
        {
          "expr": "sum by (container) (count_over_time({container=~\".+\"} [1m]))",
          "legendFormat": "{{container}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "title": "에러 로그 볼륨",
      "type": "timeseries",
      "gridPos": { "h": 6, "w": 24, "x": 0, "y": 6 },
      "datasource": { "type": "loki", "uid": "loki" },
      "fieldConfig": {
        "defaults": { "unit": "short", "color": { "fixedColor": "red", "mode": "fixed" } },
        "overrides": []
      },
      "targets": [
        {
          "expr": "sum by (container) (count_over_time({container=~\".+\"} |~ \"(?i)(ERROR|WARN|Exception|error)\" [1m]))",
          "legendFormat": "{{container}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "title": "전체 로그 (실시간)",
      "type": "logs",
      "gridPos": { "h": 16, "w": 24, "x": 0, "y": 12 },
      "datasource": { "type": "loki", "uid": "loki" },
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "sortOrder": "Descending",
        "dedupStrategy": "none"
      },
      "targets": [
        {
          "expr": "{container=~\".+\"}",
          "legendFormat": "",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "title": "에러 로그만 필터링",
      "type": "logs",
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 28 },
      "datasource": { "type": "loki", "uid": "loki" },
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "sortOrder": "Descending",
        "dedupStrategy": "none"
      },
      "targets": [
        {
          "expr": "{container=~\".+\"} |~ \"(?i)(ERROR|Exception)\"",
          "legendFormat": "",
          "refId": "A"
        }
      ]
    }
  ],
  "schemaVersion": 39
}
